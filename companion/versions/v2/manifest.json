{
  "manifest_version": 3,
  "name": "Chrome to VS Code",
  "version": "1.5",
  "description": "Adds buttons to copy or send AI Studio responses to a local service.",
  "permissions": [
    "clipboardRead"
  ],
  "host_permissions": [
    "http://localhost:4000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"] 
    }
  ],
  "action": {
    "default_title": "Chrome to VS Code"
  }
}
